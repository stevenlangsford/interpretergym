function get_monolog(n_items){
    console.log("hi")
    candidate_list = [];
    while(candidate_list.length < n_items){
	candidate_list = candidate_list.concat(shuffle(eng_monologue_library)[0])
	console.log("looping");
    }
    console.log("cd")
    return(
	candidate_list.slice(0,n_items)
    )
}
